<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Learning Keyboard"
        android:textSize="24sp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnEnableKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 1: Enable Keyboard"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnSwitchKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step 2: Switch Keyboard"
        android:layout_marginBottom="32dp" />

    <EditText
        android:id="@+id/testInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tap here to test your keyboard"
        android:inputType="text" />

</LinearLayout>
